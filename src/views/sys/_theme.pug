				link : '',
				title: 'Messages',
				icon: 'message'
			}
		];
		$scope.admin = [
			{
			link : '',
			title: 'Trash',
			icon: 'delete'
			},
			{
			link : 'showListBottomSheet($event)',
			title: 'Settings',
			icon: 'settings'
