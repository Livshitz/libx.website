	bundular.lazy.controller('inlineController', function ($scope, $rootScope, $controller, $timeout, $routeParams, $mdBottomSheet, $mdSidenav, $mdDialog) {
		bundular.extend(this, $controller('inlineControllerBase', {$scope: $scope}));

		console.log('--------- debug')

		$scope.unformatted = "";

		app.sub = angular.module('sub', ["angularInlineEdit"]) //, 'angular-google-analytics']);

		$scope.$watch('unformatted', (v)=>{
			$scope.formatted = $scope.unformatted.replace(/[\n\r]\s*|\s+/g, ' ').replace(/(\>)/g, ' $1 ').replace(/\:\s/g, ':').replace(/\s+\}\s*/g,' }\n');
